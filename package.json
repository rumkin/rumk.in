{
  "dependencies": {
    "@hyperapp/render": "^2.0.0",
    "@plant/fs": "^0.1.1",
    "@plant/http": "^1.0.4",
    "@plant/plant": "^2.5.0",
    "escape-html": "^1.0.3",
    "hast-util-to-string": "^1.0.3",
    "history": "^4.7.2",
    "hyperapp": "^1.2.5",
    "lodash.camelcase": "^4.3.0",
    "postcss-import": "^12.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/plugin-proposal-export-default-from": "^7.8.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.8.3",
    "@babel/plugin-transform-modules-commonjs": "^7.8.3",
    "@babel/preset-react": "^7.8.3",
    "@rollup/plugin-strip": "^1.3.2",
    "babel-plugin-dynamic-import-node": "^2.3.0",
    "babel-preset-minify": "^0.5.1",
    "hast-to-hyperscript": "^8.0.0",
    "hast-util-sanitize": "^2.0.2",
    "js-yaml": "^3.13.1",
    "mdast-util-to-string": "^1.1.0",
    "postcss": "^7.0.27",
    "refractor": "^2.10.1",
    "remark-frontmatter": "^1.3.3",
    "remark-parse": "^7.0.2",
    "remark-rehype": "^5.0.0",
    "rollup": "^1.32.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "unified": "^8.4.2",
    "unist-util-filter": "^2.0.2",
    "unist-util-visit": "^2.0.2",
    "vfile": "^4.0.3"
  },
  "scripts": {
    "clean": "rm -rf build",
    "build": "npm run clean && npm run build:all && npm run copy",
    "build:dev": "NODE_ENV=development npm run build",
    "build:all": "npm run build:src && npm run build:client && npm run build:workbench && npm run build:styles && npm run build:data",
    "build:articles": "node build/workbench/markdown build data/articles build/data/articles",
    "build:client": "rollup -c rollup.config.js",
    "build:data": "npm run build:articles",
    "build:src": "babel src --source-root src --out-dir build/src",
    "build:static": "npm run cli -- build build/static",
    "build:styles": "node build/workbench/postcss/bin.js styles/index.css build/assets/app.css",
    "build:workbench": "babel workbench --source-root workbench --out-dir build/workbench",
    "cli": "node build/src/bin.js",
    "copy": "npm run copy:assets && npm run copy:config",
    "copy:assets": "cp -r assets/* build/assets",
    "copy:static": "cp -r build/assets build/static",
    "copy:config": "cp config.json build/",
    "netlify": "npm run build && npm run build:static && npm run copy:static",
    "render": "npm run cli -- render / > build/index.html && npm run cli -- 404 > build/404.html",
    "start": "node build/src/server.js 8000",
    "start:static": "node build/workbench/server 8000 build/static"
  }
}
